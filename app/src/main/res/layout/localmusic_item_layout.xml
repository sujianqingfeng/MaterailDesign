<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="2dp">

    <!--android:background="?android:attr/selectableItemBackground"波纹有边界 系统波纹用此属性-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@drawable/ripple_bg">

        <TextView
            android:id="@+id/tv_music_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="@android:color/black"
            android:text="曲歌标题" />

        <TextView
            android:id="@+id/tv_music_item_songer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_music_item_title"
            android:layout_margin="4dp"
            android:text="歌手" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:src="@mipmap/ic_keyboard_arrow_right_black_36dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>